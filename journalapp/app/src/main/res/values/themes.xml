<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme handles switching from day to night -->
    <style name="Base.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">?attr/isLightTheme</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorContrast</item>
        <item name="colorAccent">@color/colorContrast</item>
        <item name="colorTertiary">@color/theme_light_grey</item>

        <item name="android:textColor">@color/colorContrast</item>

    </style>

    <style name="Theme.LightRed" parent="Base.Theme">
        <item name="colorAccent">@color/colorAccentLightRed</item>
        <item name="colorTertiary">@color/colorTertiaryLightRed</item>
    </style>

    <style name="Theme.Red" parent="Base.Theme">
        <item name="colorAccent">@color/colorAccentRed</item>
        <item name="colorTertiary">@color/colorTertiaryRed</item>
    </style>

    <style name="Theme.BlueGreen" parent="Base.Theme">
        <item name="colorAccent">@color/colorAccentBlueGreen</item>
        <item name="colorTertiary">@color/colorTertiaryBlueGreen</item>
    </style>

    <style name="Theme.Grey" parent="Base.Theme">
        <item name="colorAccent">@color/colorAccentGrey</item>
        <item name="colorTertiary">@color/colorTertiaryGrey</item>
    </style>

    <style name="Theme.GreyBlue" parent="Base.Theme">
        <item name="colorAccent">@color/colorAccentGreyBlue</item>
        <item name="colorTertiary">@color/colorTertiaryGreyBlue</item>
    </style>

    <style name="Theme.Yellow" parent="Base.Theme">
        <item name="colorAccent">@color/colorAccentYellow</item>
        <item name="colorTertiary">@color/colorTertiaryYellow</item>
    </style>



    <!-- Other Styles -->

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="popupBGStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>

    <style name="CustomDialogFragmentStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>