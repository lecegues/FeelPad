<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the ConstraintLayout -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/backgroundColor"  /> <!-- or any color for background -->
        </shape>
    </item>

    <!-- Top border -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/colorAccent" /> <!-- Replace with your desired border color -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>