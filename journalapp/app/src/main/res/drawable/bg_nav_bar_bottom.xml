<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom nav background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/backgroundColor"/> <!-- Set your desired background color -->
        </shape>
    </item>

    <!-- Top stroke -->
    <item android:bottom="-2dp" android:right="-2dp" android:left="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1dp" android:color="@color/theme_light_grey"/> <!-- Set your desired stroke color and width -->
        </shape>
    </item>
</layer-list>