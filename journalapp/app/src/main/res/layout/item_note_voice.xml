<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <ImageView android:id="@+id/voice_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/graphic_eq"
        android:background="@drawable/rounded_rectangle" /> <!-- Black background for thumbnail -->

    <ImageButton android:id="@+id/voice_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:drawable/ic_media_play" /> <!-- Play button -->

</FrameLayout>
