<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/title_image_view"
        app:srcCompat="@drawable/img"
        tools:ignore="MissingConstraints" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/defaultBackground"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noteListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@color/dark_gray"
        android:dividerHeight="3dp"
        android:padding="@dimen/cardview_default_radius"
        app:layout_constraintBottom_toTopOf="@id/mainMenuLayout"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:listitem="@layout/note_cell" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/arrowdown"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@null"
                android:contentDescription="@string/this_is_a_downward_arrow_button"
                app:srcCompat="@drawable/arrow"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/combinePDF"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@null"
                android:layout_weight="1"
                android:contentDescription="@string/combine_psd_button"
                app:srcCompat="@drawable/combinepdf"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="87dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/addNote"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_note_button"
                app:srcCompat="@drawable/add"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="0dp" />


            <ImageButton
                android:id="@+id/template"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/template_button"
                app:srcCompat="@drawable/template"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="321dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/search"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@null"
                android:layout_weight="1"
                android:contentDescription="@string/search_button"
                app:srcCompat="@drawable/search"
                tools:ignore="MissingConstraints"

                tools:layout_editor_absoluteX="244dp"
                tools:layout_editor_absoluteY="0dp" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.appcompat.widget.LinearLayoutCompat>
