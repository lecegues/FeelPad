<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.note.ReactionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Your Reaction!"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/current_emotion"
            android:layout_width="83dp"
            android:layout_height="74dp"
            android:src="@drawable/ic_note_add_emotion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="170dp" />

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="41dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/white"
            android:onClick="exitReaction"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.004" />

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="710dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/backArrow"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/emotion_low"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="angryReaction"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_note_emotion_horrible"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="87dp" />

            <ImageButton
                android:id="@+id/emotion_low_medium"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="mediumAngryReaction"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_note_emotion_disappointed"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="89dp"
                tools:layout_editor_absoluteY="85dp" />

            <ImageButton
                android:id="@+id/emotion_medium"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="neutralReaction"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_note_emotion_neutral"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="173dp"
                tools:layout_editor_absoluteY="87dp" />

            <ImageButton
                android:id="@+id/emotion_high_medium"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="mediumHappyReaction"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_note_emotion_happy"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="87dp" />

            <ImageButton
                android:id="@+id/emotion_high"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@null"
                android:onClick="happyReaction"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_note_emotion_very_happy"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="330dp"
                tools:layout_editor_absoluteY="87dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>

